{# {% extends "AnnoncesPlatformBundle::layout.html.twig" %} #}

{% extends "@AnnoncesPlatform/layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block annonces_body %}

  <h2>Liste des annonces</h2>

  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('annonces_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
        par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) d'annonces</li>
    {% endfor %}
  </ul>

{% endblock %}